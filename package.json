{
  "name": "capacitor-background-permission",
  "version": "1.0.0",
  "description": "Capacitor plugin for background location permissions",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/",
    "ios/",
    "dist/",
    "*.md"
  ],
  "author": "Tyler Kuster",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TylerKuster/capacitor-background-permission.git"
  },
  "bugs": {
    "url": "https://github.com/TylerKuster/capacitor-background-permission/issues"
  },
  "keywords": [
    "capacitor",
    "capacitor-plugin",
    "location",
    "geofencing"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,js,json,md,scss,ts,yaml}\" --write",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api BackgroundLocationPermissionPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "build:docs": "npm run docgen",
    "build:ios": "npm run build && echo 'iOS plugin files are in ios/ directory'",
    "build:android": "npm run build && echo 'Android plugin files are in android/ directory'",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/docgen": "^0.3.1",
    "@capacitor/ios": "^6.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.0",
    "swiftlint": "^1.0.1",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "@capacitor/core": {
      "optional": false
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "swiftlint": {
    "opt_in_rules": [
      "empty_count",
      "force_unwrapping"
    ]
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
